@import 'partials/base';

// Reset
@include global-reset;

body {
  color: $text-color;
  font-size: $base-font-size;
  font-family: $base-font-family;
  font-weight: $base-font-weight;
  line-height: $base-line-height;
}

img {
    max-width: 100%;
}

*, *:before, *:after { @include box-sizing(border-box); }

