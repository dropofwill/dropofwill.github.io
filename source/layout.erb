<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Drop of Will<%= ' - ' + current_article.title unless current_article.nil? %></title>

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag 'main' %>

    <!-- Viewport declarations -->
    <meta name="viewport" content="width=533">
    <meta name="viewport" content="initial-scale=0.6">
  </head>
  <body>
    <div class="wrapper">

    <header class="hero">
      <% link_to "/" do %>
        <%= image_tag 'logo.svg', class: 'logo', alt: 'Will Paul' %>
        <!-- <h1> -->
        <!--   &#38;lambda;will.paul -->
        <!-- </h1> -->
      <% end %>
      <nav>
        <ul>
          <li class="<%= current_page?('/', 'projects') %>"><%= link_to 'projects', '/' %></li>
          <li class="<%= current_page?('/posts/', 'posts') %>"><%= link_to 'posts', '/posts' %></li>
          <li><%= link_to 'github', 'http://github.com/dropofwill' %></li>
          <li><%= link_to 'resume', 'http://will-paul.com/resume' %></li>
        </ul>
      </nav>
    </header>

    <div class="typeset" role="main">

      <%= yield %>

    </div>
  </div>
  </body>
</html>
